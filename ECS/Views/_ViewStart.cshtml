@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if (controller == "Borrow" || controller == "Card" || controller == "Emp" || controller == "Record")
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }
    else if (controller == "User")
    {
        cLayout = "~/Views/Shared/_LayoutUser.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_LayoutLogin.cshtml";
    }
    Layout = cLayout;
}