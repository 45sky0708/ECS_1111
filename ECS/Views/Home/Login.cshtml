<form class="form-horizontal" id="form" role="form">

    <div class="form-group">
        <label class="col-sm-2 control-label">員工編號</label>
        <div class="col-sm-10">
            <input type="text" id="EmpID" name="EmpID" class="form-control" autofocus>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">密碼</label>
        <div class="col-sm-10">
            <input type="password" id="EmpPwd" name="EmpPwd" class="form-control">
            @*@Html.ValidationMessageFor(m => m.EmpPwd, "", new { @class = "text-danger" })*@
        </div>
    </div>

    @*按鈕*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="btnSave" value="登入" class="btn btn-info" />
        </div>
    </div>
</form>

